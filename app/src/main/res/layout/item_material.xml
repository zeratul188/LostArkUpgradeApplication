<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="material"
            type="com.example.lostarkupgradeapplication.room.Material" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            android:background="@drawable/background_relics"
            android:src="@drawable/up1_4" />
        <TextView
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:text="Item Name"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유 갯수"
            android:textSize="8dp"
            android:id="@+id/txtCountInfo"
            android:textColor="@color/sub_text"
            app:layout_constraintBottom_toTopOf="@id/edtCount"
            app:layout_constraintRight_toLeftOf="@id/txtCount"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCount"
            android:text="999"
            android:textSize="14dp"
            android:textColor="@color/text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtName"/>
        <EditText
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/edtCount"
            android:textSize="12dp"
            android:textColor="@color/text"
            android:hint="0~99999999"
            android:inputType="number"
            android:background="@drawable/edittext_dark_style"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtCount"
            app:layout_constraintStart_toEndOf="@id/imgIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>