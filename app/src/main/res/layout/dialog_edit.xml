<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dialog"
            type="com.example.lostarkupgradeapplication.equipment.EditEquipmentDialog" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutInfo"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:id="@+id/imgEquip"
                android:background="@drawable/background_adv"
                android:src="@drawable/eq1_1"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:text="Equipment Name"
                    android:textSize="18sp"
                    android:textColor="@color/grade_abv_end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtType"
                    android:text="무기"
                    android:textSize="12sp"
                    android:textColor="@color/sub_text"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLevel"
                android:text="Lv.9999"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layoutContent"
            app:layout_constraintTop_toBottomOf="@id/layoutInfo"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장비 이름"
                android:textSize="12sp"
                android:textColor="@color/sub_text"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtName"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:hint="0 ~ 20글자"
                android:maxLength="20"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="계승 상태"
                        android:textSize="12sp"
                        android:textColor="@color/sub_text"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="재련 단계"
                        android:textSize="12sp"
                        android:textColor="@color/sub_text"
                        android:layout_marginRight="5dp"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp">
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/sprTier"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/background_spinner"
                        android:layout_marginRight="5dp"
                        android:popupBackground="@color/background"/>
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/sprLevel"
                        android:spinnerMode="dropdown"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_spinner"
                        android:popupBackground="@color/background"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btnApply"
            android:background="@drawable/button_style"
            style="?android:attr/borderlessButtonStyle"
            android:text="수정"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/layoutContent"
            android:textColor="@color/text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>